<p>Title: <%= @movie.title %></p>
<p>Creation year: <%= @movie.creation_year %></>
<p>Genre: <%= @movie.genre %></p>

<br>

<p><% @movie.actors.by_age.each do |actor| %></p>
<p><%= actor.name %></p>
<% end %>

<p>Average age: <%= @movie.actor_average_age %></p>

<br>
<h2>Add an actor to this movie</h2>
<%= form_with url: "/movies/#{@movie.id}", method: :patch, local: true do |form| %>
<p><%= form.label :name %></p>
<p><%= form.text_field :name %></p> <br>

<p><%= form.label :age %></p>
<p><%= form.text_field :age %></p> <br>
<p><%= form.submit 'Submit'%></p>
<%end%>
